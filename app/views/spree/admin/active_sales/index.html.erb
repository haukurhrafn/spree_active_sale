<% content_for :page_title do %>
  <%= Spree.t(:list, scope: [:active_sale, :title]) %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:new, scope: [:active_sale, :link]), new_object_url, { icon: 'add', id: 'admin_new_active_sale_link', class: "btn-success" } %>
<% end %>

<% content_for :table_filter do %>
  <div data-hook="admin_active_sales_index_search">
    <%= search_form_for [:admin, @search] do |f| %>
      <div class="row">
        <div class="col col-md-6">
          <div data-hook="admin_active_sale_search" class="form-group">
            <%= f.label :name_cont, Spree.t(:name) %>
            <%= f.text_field :name_cont, class: "form-control js-quick-search-target js-filterable" %>
          </div>
        </div>
      </div>

      <div class="form-actions" data-hook="admin_active_sales_index_search_buttons">
        <%= button Spree.t(:search), 'search' %>
      </div>
    <% end %>
  </div>
<% end %>


<% if @active_sales.blank? %>
  <div class="alert alert-info no-objects-found">
    <%= Spree.t(:no_resource_found, resource: plural_resource_name(Spree::ActiveSale)) %>,
    <%= link_to(Spree.t(:add_one), new_object_url) %>!
  </div>
<% else %>
  <table class="table sortable" id='listing_active_sales' data-hook data-sortable-link="<%= update_positions_admin_active_sales_url %>">
    <colgroup>
      <col style="width: 5%">
      <col style="width: 85%">
      <col style="width: 10%">
    </colgroup>
    <thead>
      <tr data-hook="active_sales_header">
        <th></th>
        <th><%= Spree.t(:name) %></th>
        <th class="actions"></th>
      </tr>
    </thead>
    <tbody>
      <% @active_sales.each do |active_sale| %>
        <tr id="<%= spree_dom_id active_sale %>" data-hook="active_sales_row" class="<%= cycle('odd', 'even')%>">
        <td class="move-handle">
          <span class="icon icon-sort handle"></span>
        </td>
          <td>
            <%= active_sale.name %>
          </td>
          <td class="actions">
            <p class="actions">
              <%= link_to_edit active_sale, no_text: true %>
              <%= link_to_delete active_sale, no_text: true %>
            </p>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= paginate @active_sales %>
