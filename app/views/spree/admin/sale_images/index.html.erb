<% content_for :page_title do %>
  <%= link_to Spree.t(:active_sales), admin_active_sales_path %> /
  <%= link_to @active_sale.name, admin_active_sale_path(@active_sale) %> /
  <%= link_to @active_sale_event.name, edit_admin_active_sale_active_sale_event_path(@active_sale, @active_sale_event) %> /
  <%= Spree.t(:list, scope: [:active_sale, :event, :images, :title]) %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:new, scope: [:active_sale, :event, :images, :link]), [:new, :admin, @active_sale, @active_sale_event, :sale_image], icon: 'plus', id: 'admin_new_active_sale_image_link', class: 'btn-success' %>
<% end %>

<%= render partial: 'spree/admin/shared/sale_tabs', locals: { current: 'Sale Event Images' } %>

<%= render partial: 'spree/admin/shared/sale_images', locals: { sale_images: @sale_images } %>
